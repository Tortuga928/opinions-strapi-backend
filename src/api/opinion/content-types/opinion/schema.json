{
  "kind": "collectionType",
  "collectionName": "opinions",
  "info": {
    "singularName": "opinion",
    "pluralName": "opinions",
    "displayName": "Opinion",
    "description": "User opinions with ratings and comments"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "statement": {
      "type": "text",
      "maxLength": 1000,
      "required": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "opinions"
    },
    "isHidden": {
      "type": "boolean",
      "default": false
    },
    "user_ratings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::user-rating.user-rating",
      "mappedBy": "opinion"
    },
    "source_type": {
      "type": "enumeration",
      "enum": ["Human", "AI"],
      "default": "Human"
    },
    "generation_type": {
      "type": "enumeration",
      "enum": ["Celebrity", "Politician", "Company Executive"]
    },
    "generation_source": {
      "type": "enumeration",
      "enum": ["News", "Research", "Laws", "Advertisements"]
    },
    "generation_details": {
      "type": "string",
      "maxLength": 256
    }
  }
}
