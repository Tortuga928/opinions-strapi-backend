{
  "kind": "collectionType",
  "collectionName": "opinions",
  "info": {
    "singularName": "opinion",
    "pluralName": "opinions",
    "displayName": "Opinion",
    "description": "User opinions with ratings and comments"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "statement": {
      "type": "text",
      "required": true,
      "maxLength": 1000
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "opinions"
    },
    "user_ratings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::user-rating.user-rating",
      "mappedBy": "opinion"
    },
    "isHidden": {
      "type": "boolean",
      "default": false
    }
  }
}